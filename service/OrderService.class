package service;

import java.util.Date;

import api.JDBCInstaller;
import dao.IOrderDAO;
import model.Order;

public class OrderService {
    private IOrderDAO orderDAO;

    public OrderService() {
        JDBCInstaller jdbc = null;
        try {
            jdbc = new JDBCInstaller();
        } catch (Exception e) {
            e.printStackTrace();
        }
        orderDAO = jdbc.createOrderDAO();
    }
    
    public void addOrder(double price) {
        Date today = new Date();
        Order order = new Order(today, price, "Processing");
        orderDAO.addOrder(order);
    }
}
